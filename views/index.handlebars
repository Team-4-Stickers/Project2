{{>navbar-block}}

<div class="container">
    <div class="row">
        <div class="nopadding col-md-4">

            <div class="left-top">
                {{>welcome}} <span class="display-message">add your gift!</span>
            </div>

            <div class="left-bottom">
                <br>
                <p>
                    Let other event members know what your dream gifts are!
                </p>
                <p>
                    If you can't find an event to add the gift to, first join and event. </p>
            </div>
        </div>

        <div class="nopadding col-md-8">
            <div class="right">
                <form id="add-gift">
                    <div class="row">
                        <div class="dropdownMenus col-md-5">
                            <div class="form-group">
                                <label for="gift-name">GIFT NAME</label>
                                <input type="text" class="form-control" id="gift-name" placeholder="Dream Present">
                            </div>
                            <div class="form-group">
                                <label for="gift-event">CHOOSE EVENT</label>
                                <div class="rounded-option">
                                    <select id="gift-event" class="form-control">
                                        {{#each event}}
                                        <option value="{{this.eventName}}">{{this.eventName}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="gift-price">PRICE RANGE</label>
                                <div class="rounded-option">
                                    <select class="form-control" id="gift-price">
                                        <option value="$0.00 - $20.00">$0.00 - $20.00</option>
                                        <option value="$20.00 - $50.00">$20.00 - $50.00</option>
                                        <option value="$50.00 - $100.00">$50.00 - $100.00</option>
                                        <option value="$100.00 - $500.00">$100.00 - $500.00</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group">
                                <label for="gift-link">GIFT LINK</label>
                                <input type="text" class="form-control" id="gift-link" placeholder="www.example.com">
                            </div>
                            <div class="form-group">
                                <label for="gift-comment">COMMENTS FOR EVENT MEMBERS</label>
                                <textarea class="form-control" id="gift-comment" rows="6" maxlength="100"> </textarea>
                                <p id="comment-max">max. 100 characters</p>
                            </div>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <button class="btn btn-success btn-block" type="submit" id="submitGiftButt"><i class="fas fa-gift"></i>
                                CREATE GIFT</button>
                        </div>
                        <div class="col-md-7"></div>
                    </div>
                </form>
                <div class="row">
                    <p id="your-gifts-title">GIFTS YOU HAVE ADDED:</p>
                    <div id="your-gifts">
                        {{!-- this is where thing are appended --}}
                        {{#each gift}}
                        <p class="my-gift">
                            Gift: {{giftName}} || Price: {{priceRange}} || Link: {{giftLink}} || Comments:
                            {{giftComment}}
                        </p>
                        <button type="submit" class="btn btn-outline-dark-block deleteButt" data-id="{{id}}">DELETE</button>
                        {{/each}}

                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p id="copyright">Copyright &copy Stickers 2019</p>
        <!-- Logout option -->
        <a class="logout" href="/logout">LOG OUT</a>
    </footer>

    {{>bottom-navbar-block}}